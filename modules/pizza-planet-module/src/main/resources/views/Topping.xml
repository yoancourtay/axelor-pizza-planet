<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.4.xsd">
    <grid title="List of our pizza toppings" name="topping-grid" model="com.axelor.pizza.db.Topping">
        <field name="picture" widget="image"/>
        <field name="name"/>
        <field name="description"/>
        <field name="price"/>
    </grid>
    <form title="Create a topping" name="topping-form" model="com.axelor.pizza.db.Topping">
        <panel name="mainPanel" colSpan="12">
            <field name="picture" widget="image"/>
            <field name="name" colSpan="12"/>
            <field name="description" colSpan="9"/>
            <field name="price"/>
        </panel>
    </form>
</object-views>
