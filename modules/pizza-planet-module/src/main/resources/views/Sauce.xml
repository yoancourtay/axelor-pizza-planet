<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.4.xsd">
    <grid title="List of our pizza sauces" name="sauce-grid" model="com.axelor.pizza.db.Sauce">
        <field name="picture" widget="image"/>
        <field name="name"/>
        <field name="description"/>
        <field name="price"/>
    </grid>
    <form title="Create a sauce" name="sauce-form" model="com.axelor.pizza.db.Sauce">
        <panel name="mainPanel" colSpan="12">
            <field name="picture" widget="image" colSpan="2"/>
            <field name="name" colSpan="10" showTitle="false" placeholder="Sauce name here"/>
            <field name="description" colSpan="12" widget="text" showTitle="false" placeholder="Sauce description here"/>
            <separator colSpan="12"/>
            <spacer colSpan="9"/>
            <field name="price" colSpan="3"/>
        </panel>
    </form>
</object-views>
