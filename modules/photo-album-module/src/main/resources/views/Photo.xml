<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.4.xsd">
    <grid title="Liste de toutes le photos" name="photo-grid" model="com.axelor.photoalbum.db.Photo" canNew="false" canDelete="false" canEdit="false" orderBy="id"> 
        <field name="picture" widget="image"/>
        <field name="pictureType"/>
        <field name="main">
            <hilite background="success" if="main == true"/>
            <hilite background="danger" if="main == false"/>
        </field>
        <field name="filePath"/>
        <field name="fileNameImported"/>
    </grid>
    <form title="Mettre une photo en ligne" name="photo-form" model="com.axelor.photoalbum.db.Photo">
        <panel name="mainPanel" colSpan="12">
            <field name="picture" widget="image" colSpan="12"/>
            <panel-dashlet name="imageEditor" colSpan="12" action="action-photo-show-editor" height="700" showIf="id &amp;&amp; !$readonly()"/>
        </panel>
    </form>

    <action-view name="action-photo-show-editor" title="Editeur d'image">
        <view type="html" name="image-editor?id={{id}}&amp;model=com.axelor.photoalbum.db.Photo&amp;metaFileField=picture&amp;projectName=pizza-planet&amp;language={{_language}}"/>
        <context name="_language" expr="eval: 'fr'"/>
    </action-view>
</object-views>
